- name: setup harbor
  hosts: harbor
  user: root
  vars:
    path: /var/tmp/wise2c/harbor
  tasks:
  - name: make harbor dir
    file:
      path: '{{ item }}'
      state: directory
      mode: 0755
    with_items:
    - '{{ cpath }}'
    - '{{ path }}'

  - name: unarchive harbor
    unarchive:
      src: file/harbor-offline-installer-{{ version }}.tgz
      dest: '{{ cpath }}'

  - name: generate harbor config
    template:
      src: '{{ item.src }}'
      dest: '{{ item.dest }}'
    with_items:
    - { src: 'template/harbor.cfg.j2', dest: '{{ cpath }}/harbor/harbor.cfg' }

  - name: launch harbor
    shell: ./install.sh
    args:
      chdir: '{{ cpath }}/harbor'
